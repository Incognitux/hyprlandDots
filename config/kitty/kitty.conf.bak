# Colors
include colors.conf

# Fonts
font_size 10.5
font_family      JetBrains Mono Medium Nerd Font Complete Mono
bold_font        JetBrains Mono Bold Nerd Font Complete Mono
italic_font      JetBrains Mono Medium Italic Nerd Font Complete Mono
bold_italic_font JetBrains Mono Bold Italic Nerd Font Complete Mono

# Cursor
cursor_shape underline
# cursor #5fd700
cursor_stop_blinking_after 15.0

# Tabs
tab_bar_edge bottom
tab_separator " â”‡"
active_tab_font_style bold
inactive_tab_font_style 
tab_bar_style separator 
tab_bar_margin_width 2.0

# Hotkeys
map shift+insert        paste_from_selection

map ctrl+shift+right    next_tab
map ctrl+shift+left     previous_tab
map ctrl+shift+t        new_tab
map ctrl+shift+w        close_tab
map ctrl+shift+alt+t    set_tab_title

map ctrl+shift+equal    increase_font_size
map ctrl+shift+minus    decrease_font_size
map ctrl+shift+backspace restore_font_size

# Scrollback
scrollback_lines 10000

# Performance
repaint_delay    30
input_delay 4
sync_to_monitor no

# Bell
visual_bell_duration 0.0
enable_audio_bell no

# Shell


# URLs
url_style double
open_url_modifiers ctrl+shift
open_url_with firefox
copy_on_select no

# Miscellaneous 
hide_window_decorations no

# BEGIN_KITTY_THEME
# Catppuccin-Latte
include current-theme.conf
# END_KITTY_THEME
